{% extends 'adminbase.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}

    <div class="content-wrapper">
        <section class="content-header">
            <div class="conteiner-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Comment edit</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                            <li class="breadcrumb-item">Edit comment</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <section class="content">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Title</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip"
                                title="Remove">
                            <i class="fas fa-times"> </i></button>
                    </div>
                </div>
                <div class="card-body">

                    {{ include('admin/comment/_form.html.twig', {'button_label': 'Update'}) }}

                    <a href="{{ path('admin_comment_index') }}">back to list</a>

                    {{ include('admin/comment/_delete_form.html.twig') }}

                    <a href="{{ path('admin_comment_new') }}">Create new</a>

                </div>
                <div class="card-footer">

                </div>
            </div>
        </section>
    </div>
{% endblock %}
