{% extends 'adminbase.html.twig' %}

    {% block title %}New Image{% endblock %}

    {% block body %}

        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>New image Page</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">New Category</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fas fa-minus"></i></button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip"
                                    title="Remove">
                                <i class="fas fa-times"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <h1>{{ hotel.title }}</h1>
                        {{ include('admin/room/_form.html.twig') }}
                    </div>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Hotelid</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Number</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for room in rooms %}
                            <tr>
                                <td>{{ room.id }}</td>
                                <td>{{ room.title }}</td>
                                <td>{{ room.hotelid }}</td>
                                <td>{{ room.description }}</td>
                                <td><img src="{{ asset('upload/images/'~ room.image()) }}" width="150" alt=""></td>
                                <td>{{ room.price }}</td>
                                <td>{{ room.status }}</td>
                                <td>{{ room.number }}</td>
                                <td>
                                    <a href="{{ path('admin_room_edit', {'id': room.id,'hid':hotel.id}) }}"
                                       class="btn btn-block btn-success">Edit</a>
                                </td>
                                <td>
                                    {{ include('admin/room/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->


    {% endblock %}
